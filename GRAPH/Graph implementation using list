//Graph Implementation using List://
#include <stdio.h>
#include <stdlib.h>

#define MAX 10

// Structure for a node in the adjacency list
struct Node {
    int vertex;
    struct Node* next;
};

// Array of pointers to represent the adjacency list
struct Node* adjList[MAX];

// Function to create a new node
struct Node* createNode(int v) {//0
    struct Node* newNode = (struct Node*)malloc(sizeof(struct Node));//1000
    newNode->vertex = v;//1
    newNode->next = NULL;
    return newNode;
}

// Function to add an edge to the undirected graph
void addEdge(int u, int v) {//0 1
    // Add v to u's list
    struct Node* newNode = createNode(v);//1000
    newNode->next = adjList[u];//0
    adjList[u] = newNode;//0

    // Add u to v's list (because the graph is undirected)
    newNode = createNode(u);//2000
    newNode->next = adjList[v];
    adjList[v] = newNode;
}

// Function to print the adjacency list
void printGraph(int vertices) {//2
    for (int i = 0; i < vertices; i++) {//1<2
        struct Node* temp = adjList[i];//2000
        printf("%d: ", i);//1:
        while (temp != NULL) {//null!=null
            printf("%d â†’ ", temp->vertex);//0
            temp = temp->next;
        }
        printf("NULL\n");
    }
}

int main() {
    int vertices, edges, u, v;

    printf("Enter number of vertices: ");
    scanf("%d", &vertices);//2

    // Initialize all adjacency lists to NULL
    for (int i = 0; i < vertices; i++) {//1<2
        adjList[i] = NULL;
    }

    printf("Enter number of edges: ");
    scanf("%d", &edges);//1

    for (int i = 0; i < edges; i++) {//0<1
        printf("Enter edge (u v): ");
        scanf("%d %d", &u, &v);//0 1
        addEdge(u, v);//0 1
    }

    printf("\nAdjacency List:\n");
    printGraph(vertices);

    return 0;
}
